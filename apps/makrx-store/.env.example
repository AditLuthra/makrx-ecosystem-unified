# Application Configuration
NODE_ENV=development
PORT=3003

# Authentication (Keycloak)
NEXTAUTH_URL=http://localhost:3003
NEXTAUTH_SECRET=your-secret-here
KEYCLOAK_ISSUER=http://localhost:8080/realms/makrx
KEYCLOAK_CLIENT_ID=makrx-makrx-store
KEYCLOAK_CLIENT_SECRET=your-client-secret

# API Endpoints
# Preferred canonical client-side base URL for APIs
NEXT_PUBLIC_API_BASE_URL=http://localhost:8003

# Downstream/integrated services
# When features require calling the Services backend or other apps directly
# provide their API base URLs explicitly.
# For local docker-compose, these route via nginx on the host network or reverse proxy.
NEXT_PUBLIC_SERVICES_API_URL=http://localhost:8006/api

# Database (if needed)
DATABASE_URL=postgresql://makrx:makrx_dev_password@localhost:5432/makrx_ecosystem

# API Configuration (alias)
NEXT_PUBLIC_API_URL=http://localhost:8003
NEXT_PUBLIC_USE_MOCK_DATA=false

# Keycloak Authentication
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=makrx
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=makrx-store

# Realtime/WebSocket endpoints (optional)
# Used by notifications, processing status, and order status components
# NEXT_PUBLIC_WS_URL=ws://localhost:8000
# NEXT_PUBLIC_EVENT_SERVICE_URL=ws://localhost:8004
