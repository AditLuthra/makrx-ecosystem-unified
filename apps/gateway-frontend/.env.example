# Application Configuration
NODE_ENV=development
PORT=3000

# Authentication (Keycloak)
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=makrx
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=gateway-frontend
KEYCLOAK_ISSUER=http://localhost:8081/realms/makrx
KEYCLOAK_CLIENT_SECRET=your-client-secret

# API Endpoints
# Preferred canonical client-side base URL for APIs
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Legacy/alias env (some code may reference this). If both are set, the app uses NEXT_PUBLIC_API_BASE_URL.
# NEXT_PUBLIC_API_URL=http://localhost:8000

# Database (if needed)
DATABASE_URL=postgresql://makrx:makrx_dev_password@localhost:5432/makrx_ecosystem

# Integrated services (optional)
# If this app calls the Services backend or Store API directly from the client,
# set these; otherwise leave unset.
# NEXT_PUBLIC_SERVICES_API_URL=http://localhost:8006/api
# NEXT_PUBLIC_STORE_API_URL=http://localhost:8004/api

# Observability (optional)
# NEXT_PUBLIC_SENTRY_DSN=
# NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
