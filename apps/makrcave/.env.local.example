# MakrCave Frontend Environment Configuration
# Copy this file to .env.local for Next.js environment variables

# Environment
NEXT_PUBLIC_ENVIRONMENT=development

# API Configuration  
NEXT_PUBLIC_API_URL=/api
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_API_DIRECT_URL=http://localhost:8000

# Authentication (Keycloak Configuration)
# Local dev defaults align with docker-compose services
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8081
NEXT_PUBLIC_KEYCLOAK_REALM=makrx
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=makrcave
NEXT_PUBLIC_KEYCLOAK_REDIRECT_URI=http://localhost:5000/auth-callback
NEXT_PUBLIC_KEYCLOAK_POST_LOGOUT_REDIRECT_URI=http://localhost:5000

# Application Settings
NEXT_PUBLIC_APP_NAME=MakrCave
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUGGING=false

# External URLs
NEXT_PUBLIC_STORE_URL=https://makrx.store
NEXT_PUBLIC_GATEWAY_URL=https://makrx.org
NEXT_PUBLIC_DOCS_URL=https://docs.makrcave.com