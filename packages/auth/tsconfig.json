{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
  "declaration": true,
  "outDir": "dist",
  "jsx": "react-jsx",
  "module": "esnext",
  "moduleResolution": "bundler",
  "target": "ES2020",
  "strict": true,
  "skipLibCheck": true,
  "esModuleInterop": true,
  "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}

