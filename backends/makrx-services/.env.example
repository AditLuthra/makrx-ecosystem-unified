# MakrX Services Backend Environment Configuration

# Database
DATABASE_URL=postgresql://makrx_services:password@localhost/makrx_services

# Redis
REDIS_URL=redis://localhost:6379/2

# Cross-platform Integration
STORE_API_URL=http://localhost:8004/api
SERVICES_API_URL=http://localhost:8006/api

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=104857600

# S3/MinIO Configuration
# The backend now supports both AWS/S3-style and MinIO-style env names.
# Precedence: AWS/S3 vars take priority when set; otherwise MINIO_* are used.

# Canonical S3-style
S3_ENDPOINT=http://localhost:9000
S3_BUCKET_NAME=makrx-services-files
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# MinIO-style (used if corresponding S3/AWS vars are not set)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=makrx-services

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Keycloak
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=makrx
KEYCLOAK_CLIENT_ID=makrx-services

# Job Processing
JOB_DISPATCH_INTERVAL=30
MAX_PROVIDER_NOTIFICATIONS=5

# Debug
DEBUG=true