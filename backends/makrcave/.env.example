# Example environment for makrcave backend (safe defaults)
# Copy to .env and adjust for your environment. Do not commit real secrets.

# Database Configuration
DATABASE_URL=postgresql://makrx:makrx_dev_password@localhost:5433/makrx_ecosystem
DB_HOST=localhost
DB_PORT=5433
DB_NAME=makrx_ecosystem
DB_USER=makrx
DB_PASSWORD=makrx_dev_password

# Redis Configuration
REDIS_URL=redis://localhost:6380/0
REDIS_HOST=localhost
REDIS_PORT=6380

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=makrx
KEYCLOAK_CLIENT_ID=makrcave-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# Application Configuration
APP_NAME=makrcave
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8001

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=INFO

