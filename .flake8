[flake8]
# Keep line length aligned with Black's default
max-line-length = 88

# Ignore rules that conflict with Black formatting
extend-ignore = E203

# Exclude common build/cache dirs and virtual environments
exclude =
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    node_modules,
    dist,
    build,
    venv,
    .venv,
    backends/makrcave/venv,
    backends/makrcave/.venv,
    backends/makrcave/migrations,

# Allow star re-exports in models package init only
per-file-ignores =
    backends/makrcave/models/__init__.py: F401, F403
    backends/makrcave/utils/email_service.py: E501, W293
    backends/makrcave/utils/readme_generator.py: E501
    backends/makrcave/utils/report_generator.py: E501
    backends/makrcave/utils/invoice_generator.py: E501
